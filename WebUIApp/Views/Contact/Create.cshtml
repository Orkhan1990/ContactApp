@model ContactAddViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="card w-50 mx-auto text-white bg-secondary mb-3">
    <div class="card-header text-center">Create New Contact</div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="p-3">
            <div class="form-group">
                <label asp-for="@Model.Contact.FirstName"></label>
                <input asp-for="@Model.Contact.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.LastName"></label>
                <input asp-for="@Model.Contact.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HomeNumber"></label>
                <input asp-for="@Model.HomeNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MobilNumber"></label>
                <input asp-for="@Model.MobilNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.WorkNumber"></label>
                <input asp-for="@Model.WorkNumber" class="form-control" />
            </div>
            <button class="btn btn-sm btn-info">Save</button>
            <a asp-action="Index" class="btn btn-sm btn-warning">Back</a>
        </form>
    </div>
    
</div>


